{% extends 'layout.html.twig' %}

{% block title %}Les auteurs{% endblock %}

{% block content %}
<div class="text-center">
	<h1>Les auteurs : </h1>
</div>

<div class="row d-flex justify-content-center text-center">

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Consulter</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>

        {% for auteur in auteurs %}
        <tbody>
            <tr>
                <td> {{ auteur.nom }} </td>
                <td> {{ auteur.prenom }} </td>
                <td><a href="{{ path('app_auteur', {id: auteur.id}) }}"><i class="fas fa-eye"></i></a></td>
                <td><a href="{{ path('app_auteur_update', {id: auteur.id}) }}"><i class="fas fa-edit mx-1 text-success"></i></a></td>
                <td><a href="{{ path('app_auteur_delete', {id: auteur.id}) }}" onClick="return confirm('Êtes-vous sur de vouloir supprimer l\'auteur ?')"><i class="fas fa-trash mx-1 text-danger"></i></a></td>
            </tr>
        </tbody>
        {% endfor %}
    </table>
    
</div>

{% endblock %}
